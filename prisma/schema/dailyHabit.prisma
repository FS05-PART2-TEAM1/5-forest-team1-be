model dailyHabit {
  id        String   @id @default(uuid())
  habitId   String
  date String /// 완료 날짜? -> 완료 체크해제 시 초기화?
  status    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([habitId, date])
  @@index([habitId])
}

