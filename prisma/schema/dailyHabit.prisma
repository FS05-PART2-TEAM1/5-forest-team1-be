model dailyHabit {
  id        String   @id @default(uuid())
  habitId   String
  dayOfWeek Int /// 0: 일, 1: 월, 2: 화, 3: 수, 4: 목, 5: 금, 6: 토
  status    Boolean  @default(false) /// 월요일 오전 12시에 데이터를 초기화시킨다. -> false
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([habitId, dayOfWeek])
  @@index([habitId])
}
