model dailyHabitCheck {
  id        String   @id @default(uuid())
  habitId   String
  habitName String
  date      DateTime @db.Date
  status    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([habitId, date])
  @@index([date, habitId])
}

