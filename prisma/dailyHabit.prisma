model dailyHabit {
  
  id        String    @id @default(uuid())
  habitId   String
  day       DayOfWeek
  status    Boolean   @default(false) // 월요일 오전 12시에 데이터를 초기화시킨다.
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([habitId])
}

enum DayOfWeek {
  MON
  TUE
  WUE
  THU
  FRI
  SAT
  SUN
}
